<div class="container mt-5">
  <h1>New Game</h1>
  <div class="d-flex justify-content mb-3">
    <% @random_letters.each do |letter| %>
      <div class="p-2 bg-primary text-white m-1 rounded"><%= letter %></div>
    <% end %>
  </div>
  <h5>What is the longest word you can find?</h3>
  <form class="d-flex justify content" form action="/score" method="post" data-turbo="false">
    <div class=" mx-sm-3 mb-2" >
-      <input type="text" name="word" placeholder="your word">
    </div>
    <button type="submit" class="btn btn-light mb-2">Play</button>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @random_letters%>
  </form>

</div>
